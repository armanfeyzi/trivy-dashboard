# Trivy Dashboard - S3 Credentials Secret
# Copy this file to secret.yaml and fill in your values
#
# Required for both Dashboard and Exporter components to access S3
#
apiVersion: v1
kind: Secret
metadata:
  name: trivy-dashboard-s3
  namespace: trivy-dashboard
  labels:
    app.kubernetes.io/name: trivy-dashboard
type: Opaque
stringData:
  # S3 bucket name where reports will be stored
  S3_BUCKET: "your-trivy-reports-bucket"
  
  # AWS region
  AWS_REGION: "eu-west-1"
  
  # Optional: S3 prefix for organizing reports
  S3_PREFIX: "trivy-reports"
  
  # AWS credentials (use IAM roles in production if possible)
  AWS_ACCESS_KEY_ID: "your-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-secret-access-key"
